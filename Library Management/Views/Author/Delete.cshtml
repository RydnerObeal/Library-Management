@using Library_Management_Domain.Entities
@model Author

@{
    ViewData["Title"] = "Archive Author";
}

<h2>Archive Author</h2>

<div>
    <h4>Are you sure you want to archive this author?</h4>
    <div>
        <strong>@Model.Name</strong> (@Model.BirthDate?.ToString("yyyy-MM-dd"))
    </div>
</div>

<form asp-action="Archive" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Archive</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
