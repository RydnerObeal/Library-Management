@using Library_Management_Domain.Entities
@model Author

@{
    ViewData["Title"] = "Edit Author";
}

<h2>Edit Author</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Biography"></label>
        <textarea asp-for="Biography" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ProfileImageUrl"></label>
        <input asp-for="ProfileImageUrl" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
