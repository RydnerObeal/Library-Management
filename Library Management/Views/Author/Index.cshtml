@using Library_Management_Domain.Entities
@model IEnumerable<Author>

@{
    ViewData["Title"] = "Authors";
}

<h2>Authors</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Author</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Birthdate</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>@author.BirthDate?.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@author.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@author.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Archive" asp-route-id="@author.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger">Archive</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
