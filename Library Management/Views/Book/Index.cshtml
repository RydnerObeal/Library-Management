@model IEnumerable<Library_Management.Models.BookListViewModel>

@{
    ViewData["Title"] = "Books";
}

<h1 class="mb-4 fw-bold">Book Library</h1>

<div class="d-flex justify-content-between mb-3">
    <a href="javascript:void(0);" class="btn btn-primary" onclick="openAddModal()">
        <i class="bi bi-plus-circle"></i> Add Book
    </a>
    <a asp-action="Archive" class="btn btn-secondary">
        <i class="bi bi-archive"></i> View Archived Books
    </a>
</div>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-5 g-4">
    @foreach (var book in Model)
    {
        <div class="col">
            <div class="card book-card h-100 shadow-sm border-0">

                <div class="book-actions">
                    <a href="javascript:void(0);" class="action-btn" title="Edit" onclick="openEditModal('@book.BookId')">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@book.BookId" class="action-btn" title="Details"></a>
                    <a href="javascript:void(0);" class="action-btn" title="Delete" onclick="openDeleteModal('@book.BookId', '@book.Title')">
                        <i class="bi bi-trash"></i>
                    </a>

                    <!-- Archive button -->
                    <form asp-action="ArchiveBook" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@book.BookId" />
                        <button type="submit" class="btn btn-warning btn-sm" title="Archive">
                            <i class="bi bi-archive"></i> Archive
                        </button>
                    </form>
                </div>

                <img src="@book.CoverImageUrl" class="card-img-top" alt="@book.Title" style="height: 200px; object-fit: cover; background-color: silver;">

                <div class="card-body">
                    <h6 class="card-title text-truncate" title="@book.Title">@book.Title</h6>
                    <p class="text-muted mb-1 text-truncate">
                        <strong>Author:</strong> @book.AuthorName
                    </p>
                    <p class="mb-0 small text-secondary">
                        @book.Genre | Copies: @book.AvailableCopies / @book.TotalCopies
                    </p>
                </div>
            </div>
        </div>
    }
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Content loaded dynamically -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openEditModal(bookId) { loadModal(`/Book/EditModal?id=${encodeURIComponent(bookId)}`); }
        function openAddModal() { loadModal(`/Book/AddModal`); }
        function openDeleteModal(bookId, bookTitle) { loadModal(`/Book/DeleteModal?id=${encodeURIComponent(bookId)}`); }

        function loadModal(url) {
            fetch(url)
                .then(r => r.text())
                .then(html => {
                    document.querySelector('#exampleModal .modal-content').innerHTML = html;
                    new bootstrap.Modal(document.getElementById('exampleModal')).show();
                })
                .catch(e => alert(e.message));
        }

        document.addEventListener("submit", function(e) {
            const form = e.target;

            if (form.matches("#AddBookForm, #editBookForm, #deleteBookForm")) {
                e.preventDefault();
                fetch(form.action, { method: form.method, body: new URLSearchParams(new FormData(form)) })
                    .then(r => r.ok ? location.reload() : Promise.reject('Action failed.'))
                    .catch(alert);
            }

            if (form.matches("[asp-action='ArchiveBook']")) {
                e.preventDefault();
                fetch(form.action, { method: form.method, body: new URLSearchParams(new FormData(form)) })
                    .then(r => {
                        if (!r.ok) throw 'Archive failed.';
                        form.closest('.col')?.remove();
                    })
                    .catch(alert);
            }
        });
    </script>
}
