@using Library_Management_Domain.Entities
@model Author

@{
    ViewData["Title"] = "Author Details";
}

<h2>@Model.Name</h2>

<img src="@Model.ProfileImageUrl" alt="@Model.Name" style="max-width:200px;" />

<p><strong>Biography:</strong> @Model.Biography</p>
<p><strong>Birthdate:</strong> @Model.BirthDate?.ToString("yyyy-MM-dd")</p>

<h4>Books Written</h4>
@if (Model.Books.Any())
{
    <ul>
        @foreach (var book in Model.Books)
        {
            <li>@book.Title (@book.PublishedDate?.ToString("yyyy"))</li>
        }
    </ul>
}
else
{
    <p>No books listed for this author.</p>
}

<a asp-action="Index" class="btn btn-secondary">Back</a>
